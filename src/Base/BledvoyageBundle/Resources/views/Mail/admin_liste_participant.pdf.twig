<page>
    <div class="avison">
        <div class="resudate">
            <h1>{{ date|date('d/m/Y') }}</h1>
        </div>
        <strong>TOTAL :  {{ nbrResa }} résa, {{ nbrPlace }} places</strong>
        <br />
        <br />
        <strong>Tarif: {{ tarif }} dinars/personne</strong>
        <h2>{{ titre }}</h2>
        <table>
            <thead>
                <tr>
                    <th class="numero">Ligne</th>
                    <th>Résa</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Tél.</th>
                    <th>Place</th>
                    <th>Créneau</th>
                    <th>Notes</th>
                </tr>
            </thead>
            <tbody>
                {% set i = 1 %}
                {% for data in product %}
                <tr>
                    <td class="numero">{{ i }}</td>
                    <td>{{ data.id }}</td>
                    <td>{{ data.prenom }}</td>
                    <td>{{ data.nom }}</td>
                    <td>{{ data.tel }}</td>
                    <td>{{ data.nombre }}</td>
                    <td>{{ data.creneau }}</td>
                    <td>{{ data.note }}</td>
                </tr>
                {% set i = i + 1 %}
                {% endfor %}
            </tbody>
        </table>
    </div>
</page>
