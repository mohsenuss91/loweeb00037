<!doctype html>
<html>
    <head>
        <!--[if lt IE 9]>
        <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js"></script>
        <![endif]-->
        <meta charset="UTF-8" />
        <title>{% block title %}#chassezlaroutine{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('bundles/basebledvoyage/css/style.css') }}"/>
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block head %}
        <div class="bloc_page_entetee">
            <div class="bloc_page_entete">
                <div class="bloc_page_entete_1">
                    <a href="{{ path('base_bledvoyage_homepage') }}"><img src="{{ asset('bundles/basebledvoyage/images/old/logo_2.png') }}" alt="logo de bledvoyage" /></a>
                </div>
                <div class="bloc_page_entete_2">
                    <div class="entete3">
                        {% if not is_granted("ROLE_USER") %}<a href="{{ path('fos_user_security_login') }}">{% trans %}base.bledvoyage.base.login{% endtrans %}</a>{% else %}<a href="{{ path('fos_user_security_logout') }}">{% trans %}base.bledvoyage.base.logout{% endtrans %}</a>{% endif %}
                        {% if is_granted("ROLE_MODERATEUR") or is_granted("ROLE_ADMIN") or is_granted("ROLE_MONITEUR") %}<a href="{{ path('bledvoyage_admin') }}">{% trans %}base.bledvoyage.base.manager{% endtrans %}</a>{% endif %}
                        <a href="{{ path('bledvoyage_promotion') }}">{% trans %}base.bledvoyage.base.promotion{% endtrans %}</a>
                        <a href="{{ path('bledvoyage_teambuilding') }}">{% trans %}base.bledvoyage.base.entreprise{% endtrans %}</a>
                        {% block formation %}{% endblock %}
                        <a href="{{ path('bledvoyage_suggest') }}">{% trans %}base.bledvoyage.base.depot{% endtrans %}</a>
                        {#
                        <a href="{{ path('bledvoyage_contact') }}">Contact</a>
                        #}
                        {% if is_granted("ROLE_USER") and not is_granted("ROLE_MODERATEUR") and not is_granted("ROLE_ADMIN") %}
                        <div class="contsou">
                            <img src="{{ asset('bundles/basebledvoyage/images/interface/phone.png') }}" alt="0 556 179 774"/>
                            <p>0 556 179 774</p>
                        </div>
                        {% elseif not is_granted("ROLE_USER") %}
                        <div class="contsou">
                            <img src="{{ asset('bundles/basebledvoyage/images/interface/phone.png') }}" alt="0 556 179 774"/>
                            <p>0 556 179 774</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="bloc_page_entete3">
                {# <a href="{{ path('base_bledvoyage_homepage', { _locale: 'dz'} ) }}" title="bledvoyage s tamaziɣt"><img src="{{ asset('bundles/basebledvoyage/images/lang/dz.png') }}" alt="bledvoyage s tamaziɣt" id="dz"/></a> #}
                <a href="{{ path('base_bledvoyage_homepage', { _locale: 'fr'} ) }}" title="bledvoyage en français"><img src="{{ asset('bundles/basebledvoyage/images/lang/fr.png') }}" alt="bledvoyage en français" id="fr"/></a>
                <a href="{{ path('base_bledvoyage_homepage', { _locale: 'en'} ) }}" title="bledvoyage in english"><img src="{{ asset('bundles/basebledvoyage/images/lang/en.png') }}" alt="bledvoyage in english" id="en"/></a>
                <a href="{{ path('base_bledvoyage_homepage', { _locale: 'es'} ) }}" title="bledvoyage en español"><img src="{{ asset('bundles/basebledvoyage/images/lang/es.png') }}" alt="bledvoyage en español" id="es"/></a>
            </div>
        </div>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block foot %}
        <div class="footer_page">
            <div id="bloc_page_footer2">
                <p>
                    {% trans %}base.bledvoyage.base.footer{% endtrans %}
                </p>
            </div>
            <hr>
            <div id="bloc_page_footer3">
                <a href="#">{% trans %}base.bledvoyage.base.toutsavoir{% endtrans %}</a> -
                © 2013 <a href="{{ path('base_bledvoyage_homepage') }}" target="_blank">bledvoyage.com</a> -
                <a href="http://www.facebook.com/Bledvoyage" target="_blank" title="bledvoyage sur Facebook"><img src="{{ asset('bundles/basebledvoyage/images/old/facebook.png') }}" alt="bledvoyage sur facebook" id="facebook"/></a>
                <a href="https://twitter.com/bledvoyage" target="_blank" title="bledvoyage sur twitter"><img src="{{ asset('bundles/basebledvoyage/images/old/twitter.png') }}" alt="bledvoyage sur twitter" id="twitter"/></a>
                <a href="http://www.youtube.com/user/bledvoyage" target="_blank" title="bledvoyage sur Youtube"><img src="{{ asset('bundles/basebledvoyage/images/old/youtube.png') }}" alt="bledvoyage sur youtube" id="skype"/></a>
            </div>
        </div>
        {% endblock %}
        {% block jquery %}
        <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
